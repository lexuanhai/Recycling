<script type="text/javascript">
    $(document).ready(function () {
        var _href = window.location.href.toLowerCase();
        if (_href.indexOf("about") >= 0) {
            $(".nav-item,.item-sub_menu").removeClass("active");
            $(".about").addClass("active");
        } else if (_href.indexOf("contact") >=0) {
            $(".nav-item,.item-sub_menu").removeClass("active");
            $(".contact").addClass("active");
        }
        else if (_href.indexOf("exchangepoints") >= 0) {
            $(".nav-item,.item-sub_menu").removeClass("active");

            $(".accumulate,.exchange-points").addClass("active");
        }
        else if (_href.indexOf("redeempoints/index") >= 0) {
            $(".nav-item,.item-sub_menu").removeClass("active");

            $(".accumulate,.redeem-points").addClass("active");
        }
        else if (_href.indexOf("redeempoints/pointaddress") >= 0) {
            $(".nav-item,.item-sub_menu").removeClass("active");

            $(".accumulate,.point-address").addClass("active");
        }
        else if (_href.indexOf("products") >= 0) {
            $(".nav-item,.item-sub_menu").removeClass("active");

            $(".products").addClass("active");
        }

    })
